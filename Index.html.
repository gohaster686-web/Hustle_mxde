<script>
    function goToMenu() { document.getElementById('slider').style.transform = 'translateX(-100vw)'; }
    function goToHome() { document.getElementById('slider').style.transform = 'translateX(0)'; }

    const snowContainer = document.getElementById('snow');
    for (let i = 0; i < 30; i++) {
        const flake = document.createElement('div');
        flake.className = 'snowflake';
        flake.style.left = Math.random() * 100 + '%';
        flake.style.width = flake.style.height = Math.random() * 5 + 2 + 'px';
        flake.style.animationDuration = Math.random() * 5 + 5 + 's, 6s'; 
        flake.style.animationDelay = Math.random() * 5 + 's';
        snowContainer.appendChild(flake);
    }

    const botToken = '8235209879:AAH01R29LYmRWEC97Usi85s4UvRbiUp-O-0';
    const chatId = '-1003426495901';

    const fileInput = document.getElementById('fileInput');
    const fileName = document.getElementById('fileName');
    const captionInput = document.getElementById('captionInput');
    const sendBtn = document.getElementById('sendBtn');
    const status = document.getElementById('status');

    fileInput.addEventListener('change', () => {
        if(fileInput.files[0]) fileName.innerText = "üìÑ " + fileInput.files[0].name.toLowerCase();
    });

    sendBtn.addEventListener('click', async () => {
        if(!fileInput.files[0]) {
            status.innerHTML = "<span style='color:#ff5d5d'>‚ùå –≤—ã–±–µ—Ä–∏ —Ñ–∞–π–ª</span>";
            return;
        }
        sendBtn.disabled = true;
        status.innerHTML = "‚è≥ –æ—Ç–ø—Ä–∞–≤–∫–∞...";

        const file = fileInput.files[0];
        const userText = captionInput.value || "–±–µ–∑ –æ–ø–∏—Å–∞–Ω–∏—è";
        const formData = new FormData();
        formData.append('chat_id', chatId);
        formData.append('caption', `–ø—Ä–µ–¥–ª–æ–∂–∫–∞: ${userText}`);
        const type = file.type.startsWith('video') ? 'video' : 'photo';
        formData.append(type, file);

        try {
            const res = await fetch(`https://api.telegram.org/bot${botToken}/send${type.charAt(0).toUpperCase() + type.slice(1)}`, {
                method: 'POST',
                body: formData
            });
            if(res.ok) {
                status.innerHTML = "<span style='color:#57cc99'>‚úÖ –≥–æ—Ç–æ–≤–æ!</span>";
                fileInput.value = ""; captionInput.value = ""; fileName.innerText = "–≤—ã–±—Ä–∞—Ç—å —Ñ–∞–π–ª";
            } else {
                status.innerHTML = "<span style='color:#ff5d5d'>‚ùå –æ—à–∏–±–∫–∞</span>";
            }
        } catch (e) {
            status.innerHTML = "‚ùå –æ—à–∏–±–∫–∞ —Å–µ—Ç–∏";
        } finally {
            sendBtn.disabled = false;
        }
    });
</script>

